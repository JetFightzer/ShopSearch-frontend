{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"noUncheckedIndexedAccess": true,
		"experimentalDecorators": true,
		"target": "ES6",
		"lib": ["ES2020", "DOM"],
		"jsx": "preserve",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"rootDirs": ["src"],
		"paths": {
			"*": [
				// "*",
				"./node_modules/*",
				"./src/*"
			],
		}
	},
	// "include": [
	// 	"./src",
	// 	"./node_modules"
	// ],
	"exclude": [
		"node_modules",
		"public"
	]
}